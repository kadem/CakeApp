<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:layout_weight=".9"
        android:padding="8dp">

        <android.opengl.GLSurfaceView
            android:id="@+id/my_surface_view"
            android:layout_width="350dp"
            android:layout_height="290dp"
            />

    </LinearLayout>

    <ViewFlipper android:id="@+id/myViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/flipOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/caption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How many tiers: "
                android:textSize="20dp"/>

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout1"
                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button_id1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="1"/>

                <Button
                    android:id="@+id/button_id2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="2" />

                <Button
                    android:id="@+id/button_id3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="3"/>

                <Button
                    android:id="@+id/button_id4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="4"/>

            </GridLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/caption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What size base tier?"
                android:textSize="20dp"/>

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout2"
                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button2_id1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="16 inch"/>

                <Button
                    android:id="@+id/button2_id2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="14 inch" />

                <Button
                    android:id="@+id/button2_id3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="12 inch"/>

                <Button
                    android:id="@+id/button2_id4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="10 inch"/>

            </GridLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/caption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What size for tier 2?"
                android:textSize="20dp"/>

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout3"
                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button3_id1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="14 inch"/>

                <Button
                    android:id="@+id/button3_id2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="12 inch" />

                <Button
                    android:id="@+id/button3_id3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="10 inch"/>

                <Button
                    android:id="@+id/button3_id4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="8 inch"/>

            </GridLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/caption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What size for tier 3?"
                android:textSize="20dp"/>

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout4"
                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button4_id1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="12 inch"/>

                <Button
                    android:id="@+id/button4_id2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="10 inch" />

                <Button
                    android:id="@+id/button4_id3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="8 inch"/>

                <Button
                    android:id="@+id/button4_id4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="6 inch"/>

            </GridLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/caption5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What size for tier 4?"
                android:textSize="20dp"/>

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout5"
                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button5_id1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="10 inch"/>

                <Button
                    android:id="@+id/button5_id2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="8 inch" />

                <Button
                    android:id="@+id/button5_id3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="6 inch"/>

                <Button
                    android:id="@+id/button5_id4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="4 inch"/>

            </GridLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/flipThree"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<Button-->
                <!--android:id="@+id/button_test"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:gravity="center"-->
                <!--android:text="TEST"/>-->

            <com.tutsplus.opengltutorial.view.ColorPickerView
                android:id="@+id/colorpicker"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <com.tutsplus.opengltutorial.view.ColorPanelView
                    android:id="@+id/colorpanel"
                    android:layout_width="200dp"
                    android:layout_height="50dp" />
                <Button
                    android:id="@+id/colorButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Submit"/>
            </LinearLayout>

    </LinearLayout>

</ViewFlipper>

